<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:endColor="@color/paris_green"
                android:centerColor="@color/orange"
                android:startColor="@color/science_blue" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>